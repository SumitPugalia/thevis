<Layouts.app flash={@flash} current_user={@current_user} page_title={@page_title}>
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Scan Details</h1>
        <p class="mt-2 text-sm text-gray-600">Project: {@project.name}</p>
      </div>
      <div class="flex gap-2">
        <%= if @scan_run.status == :completed do %>
          <a
            href={~p"/projects/#{@project.id}/report/#{@scan_run.id}"}
            download
            class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-600 text-white font-medium rounded-lg hover:bg-emerald-700 transition-colors"
          >
            <.icon name="hero-document-arrow-down" class="w-5 h-5" /> Export PDF
          </a>
        <% end %>
        <.link
          navigate={~p"/projects/#{@project.id}/scans"}
          class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors"
        >
          <.icon name="hero-arrow-left" class="w-5 h-5" /> Back to Scans
        </.link>
      </div>
    </div>
    
<!-- Scan Run Info -->
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Scan Information</h2>
      <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Scan Type</dt>
          <dd class="mt-1 text-sm text-gray-900">
            {String.replace(Atom.to_string(@scan_run.scan_type), "_", " ") |> String.capitalize()}
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1">
            <span class={[
              "px-2 py-1 text-xs font-semibold rounded-full",
              BadgeHelpers.scan_run_status_badge(@scan_run.status)
            ]}>
              {String.capitalize(Atom.to_string(@scan_run.status))}
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Completed At</dt>
          <dd class="mt-1 text-sm text-gray-900">
            {if @scan_run.completed_at,
              do: DateTime.to_string(@scan_run.completed_at),
              else: "In progress"}
          </dd>
        </div>
      </dl>
    </div>
    
<!-- Entity Snapshots -->
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">AI Recognition Results</h2>
      </div>

      <div class="p-6 space-y-6">
        <%= if Enum.empty?(@snapshots) do %>
          <div class="text-center py-12">
            <p class="text-gray-500">No entity snapshots available for this scan.</p>
          </div>
        <% else %>
          <div
            :for={snapshot <- @snapshots}
            class="border border-gray-200 rounded-lg p-6 hover:border-blue-300 transition-colors"
          >
            <div class="flex items-start justify-between mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900">
                  {String.capitalize(Atom.to_string(snapshot.optimizable_type))} Recognition
                </h3>
                <p class="text-sm text-gray-600 mt-1">
                  Source: {snapshot.source_llm || "Unknown"}
                </p>
              </div>
              <div class="text-right">
                <div class={["text-2xl font-bold", confidence_color(snapshot.confidence_score)]}>
                  {Float.round(snapshot.confidence_score * 100, 1)}%
                </div>
                <p class="text-xs text-gray-500 mt-1">Confidence</p>
              </div>
            </div>
            
<!-- Confidence Bar -->
            <div class="mb-4">
              <div class="w-full bg-gray-200 rounded-full h-2.5">
                <div
                  class={[
                    "h-2.5 rounded-full transition-all",
                    if(snapshot.confidence_score >= 0.8,
                      do: "bg-green-500",
                      else:
                        if(snapshot.confidence_score >= 0.5,
                          do: "bg-yellow-500",
                          else: "bg-red-500"
                        )
                    )
                  ]}
                  style={"width: #{confidence_bar_width(snapshot.confidence_score)}"}
                >
                </div>
              </div>
            </div>
            
<!-- AI Description -->
            <div class="mb-4">
              <h4 class="text-sm font-medium text-gray-700 mb-2">AI Description</h4>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <p class="text-sm text-gray-700 whitespace-pre-wrap">{snapshot.ai_description}</p>
              </div>
            </div>
            
<!-- Metadata -->
            <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-200">
              <div>
                <dt class="text-xs font-medium text-gray-500">Prompt Template</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  {String.replace(snapshot.prompt_template || "unknown", "_", " ")
                  |> String.capitalize()}
                </dd>
              </div>
              <div>
                <dt class="text-xs font-medium text-gray-500">Captured At</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  {DateTime.to_string(snapshot.inserted_at)}
                </dd>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
<!-- Recall Results -->
    <%= if @scan_run.scan_type == :recall do %>
      <div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Recall Test Results</h2>
        </div>

        <div class="p-6">
          <%= if Enum.empty?(@recall_results) do %>
            <div class="text-center py-12">
              <p class="text-gray-500">No recall results available for this scan.</p>
            </div>
          <% else %>
            <% recall_percentage = calculate_recall_percentage(@recall_results) %>
            <% mention_rank = calculate_mention_rank(@recall_results) %>
            
<!-- Summary Metrics -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div class="bg-indigo-50 rounded-lg p-4 border border-indigo-200">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm font-medium text-indigo-600">Recall Percentage</p>
                    <p class="text-3xl font-bold text-indigo-900 mt-1">
                      {Float.round(recall_percentage, 1)}%
                    </p>
                  </div>
                  <div class="p-3 rounded-full bg-indigo-100 text-indigo-600">
                    <.icon name="hero-chart-bar" class="h-6 w-6" />
                  </div>
                </div>
              </div>

              <div class="bg-purple-50 rounded-lg p-4 border border-purple-200">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm font-medium text-purple-600">Average Mention Rank</p>
                    <p class="text-3xl font-bold text-purple-900 mt-1">
                      {if mention_rank, do: Float.round(mention_rank, 1), else: "N/A"}
                    </p>
                  </div>
                  <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                    <.icon name="hero-trophy" class="h-6 w-6" />
                  </div>
                </div>
              </div>
            </div>
            
<!-- Detailed Results Table -->
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Category
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Prompt
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Mentioned
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Rank
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Response
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <tr :for={result <- @recall_results} class="hover:bg-gray-50">
                    <td class="px-4 py-4 whitespace-nowrap">
                      <span class="text-sm font-medium text-gray-900">
                        {String.replace(result.prompt_category, "_", " ") |> String.capitalize()}
                      </span>
                    </td>
                    <td class="px-4 py-4">
                      <p class="text-sm text-gray-600 max-w-md">{result.prompt_text}</p>
                    </td>
                    <td class="px-4 py-4 whitespace-nowrap">
                      <span class={[
                        "px-2 py-1 text-xs font-semibold rounded-full",
                        if(result.mentioned,
                          do: "bg-green-100 text-green-800",
                          else: "bg-red-100 text-red-800"
                        )
                      ]}>
                        {if result.mentioned, do: "Yes", else: "No"}
                      </span>
                    </td>
                    <td class="px-4 py-4 whitespace-nowrap">
                      <span class="text-sm text-gray-900">
                        {if result.mention_rank, do: "#{result.mention_rank}", else: "-"}
                      </span>
                    </td>
                    <td class="px-4 py-4">
                      <p class="text-sm text-gray-600 max-w-md line-clamp-2">
                        {String.slice(result.response_text || "", 0, 100)}
                        {if result.response_text && String.length(result.response_text) > 100,
                          do: "..."}
                      </p>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</Layouts.app>
